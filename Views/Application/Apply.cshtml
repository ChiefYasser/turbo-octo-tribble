@model HRRecruitmentSystem.Models.JobApplicationViewModel

@{
    ViewData["Title"] = "Apply for Job";
}

<h1>Apply for Position</h1>
<h3>@Model.JobTitle</h3>
<hr />

<div class="row">
    <div class="col-md-6">
        <!-- enctype="multipart/form-data" is REQUIRED for file uploads -->
        <form asp-action="Apply" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="JobOfferId" />
            <input type="hidden" asp-for="JobTitle" />

            <div class="alert alert-info">
                Applying as: <strong>@User.Identity?.Name</strong>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CvFile" class="control-label fw-bold"></label>
                <input asp-for="CvFile" class="form-control" type="file" accept=".pdf" />
                <span asp-validation-for="CvFile" class="text-danger"></span>
                <small class="text-muted">Max size: 5MB. PDF only.</small>
            </div>

            <div class="form-group">
                <input type="submit" value="Submit Application" class="btn btn-success" />
                <a asp-controller="JobOffer" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}